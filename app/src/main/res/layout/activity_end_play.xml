<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    app:layoutDescription="@xml/activity_end_play_scene">

    <TextView
        android:id="@+id/tvWinOrLose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tvWinOrLoseMargin"
        android:text="" />

    <TextView
        android:id="@+id/tvNumberOfAttempts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tbNumberOfAttemptsMargin"
        android:text="" />

    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/tvNumberMargin"
        android:text="" />
</LinearLayout>